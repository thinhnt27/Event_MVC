    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ticket.EventId" class="control-label"></label>
                <select asp-for="Ticket.EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketType" class="control-label"></label>
                <input asp-for="Ticket.TicketType" class="form-control" />
                <span asp-validation-for="Ticket.TicketType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Price" class="control-label"></label>
                <input asp-for="Ticket.Price" class="form-control" />
                <span asp-validation-for="Ticket.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.AvailableQuantity" class="control-label"></label>
                <input asp-for="Ticket.AvailableQuantity" class="form-control" />
                <span asp-validation-for="Ticket.AvailableQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.StartedTime" class="control-label"></label>
                <input asp-for="Ticket.StartedTime" class="form-control" />
                <span asp-validation-for="Ticket.StartedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.EndedTime" class="control-label"></label>
                <input asp-for="Ticket.EndedTime" class="form-control" />
                <span asp-validation-for="Ticket.EndedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.CreatedBy" class="control-label"></label>
                <input asp-for="Ticket.CreatedBy" class="form-control" />
                <span asp-validation-for="Ticket.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Status" class="control-label"></label>
                <select asp-for="Ticket.Status" class="form-control" default="True">
                    <option value="True">True</option>
                    <option value="False">False</option>
                </select>
                <span asp-validation-for="Ticket.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

