@page
@model Event.RazorWebApp.Pages.Category.CustomerModel
@{
    ViewData["Title"] = "Customer";
    var customers = Model.Customers;
}

<div class="text-center">
    <h1 class="display-6">Customer Management</h1>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title table-center">ID</th>
                    <th class="card-title table-center">Name</th>
                    <th class="card-title table-center">Email</th>
                    <th class="card-title table-center">Password</th>
                    <th class="card-title table-center">Phone</th>
                    <th class="card-title table-center">Address</th>
                    <th class="card-title table-center">Delete</th>
                    <th class="card-title table-center">Update</th>
                </tr>
            </thead>
            <tbody class="tblcustomerList">
                @{
                    foreach (var item in customers)
                    {

                        <tr>
                            <td>
                                @item.CustomerId

                            </td>


                            <td>@item.CustomerName</td>
                            <td>@item.Email</td>
                            <td>@item.Password"</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>

                            <td>
                                <button type="button" class="btn btn-primary" onclick="updateCustomer('@item.CustomerId', '@item.CustomerName', '@item.Email','@item.Password', '@item.Phone', '@item.Address')">Update</button>
                            </td>
                            <td>
                                <form method="post" asp-page-handler="Remove" asp-route-id="@item.CustomerId" style="display:inline;">
                                    <button type="submit" class="btn btn-link">Remove</button>
                                </form>
                            </td>




                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
</div>

<button id="createNewButton" class="btn btn-primary">Create New</button>

<div class="modal fade" id="customerEditModel" tabindex="-1" aria-labelledby="customerModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update" id="frm">
                <div class="modal-header">
                    <h5 class="modal-title" id="customerModelLabel">Edit Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="CustomerId" name="CustomerId" class="form-control" />
                    <div class="form-group">
                        <label for="CustomerName">Name</label>
                        <input type="text" id="CustomerName" name="CustomerName" class="form-control" />
                        <label for="Email">Email</label>
                        <input type="text" id="Email" name="Email" class="form-control" />
                        <label for="Password">Password</label>
                        <input type="text" id="Password" name="Password" class="form-control" />
                        <label for="Phone">Phone</label>
                        <input type="text" id="Phone" name="Phone" class="form-control" />
                        <label for="Address">Address</label>
                        <input type="text" id="Address" name="Address" class="form-control" />
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="bookingModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>New Customer</h2>
        <form method="post" asp-page-handler="Create">
            <div class="form-group">

                <label for="CustomerName">Customer Name:</label>
                <input type="text" id="CustomerName" name="CustomerName" class="form-control" asp-for="customers.CustomerName" required>

                <label for="Email">Customer Email:</label>
                <input type="text" id="Email" name="Email" class="form-control" asp-for="customers.Email" required>

                <label for="Address">Customer Address:</label>
                <input type="text" id="Address" name="Address" class="form-control" asp-for="customers.Address" required>

                <label for="Password">Customer Password:</label>
                <input type="text" id="Password" name="Password" class="form-control" asp-for="customers.Password" required>

                <label for="Phone">Customer Phone:</label>
                <input type="text" id="Phone" name="Phone" class="form-control" asp-for="customers.Phone" required>

            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var modal = document.getElementById("bookingModal");
        var btn = document.getElementById("createNewButton");
        var span = document.getElementsByClassName("close")[0];
        btn.onclick = function () {
            modal.style.display = "block";
        }
        span.onclick = function () {
            modal.style.display = "none";
        }
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }


        function updateCustomer(id, name, email, pass, phone, address) {
            $('#CustomerId').val(id);  // Set PetCategoryId in the hidden input field
            $('#CustomerName').val(name);  // Set Name in the input field
            $('#Email').val(email);
            $('#Password').val(pass);
            $('#Phone').val(phone);
            $('#Address').val(address);
            $('#customerEditModel').modal('show');  // Show the modal
        }
    </script>

}

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
        backdrop-filter: blur(5px);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #888;
        width: 50%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>