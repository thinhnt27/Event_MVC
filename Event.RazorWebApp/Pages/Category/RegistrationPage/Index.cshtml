@model Event.RazorWebApp.Pages.RegistrationPage.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="row">
<div class="col-md-6">
<h1>REGISTRATIONS</h1>
</div>
<div class="col-md-6 text-end">
<p>
            <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>   
</div>
</div>
<form method="get" asp-page="./Index" class="mb-4">
    <div class="row g-2">
        <div class="col-md-2">
            <label for="id" class="form-label">Id:</label>
            <input type="text" name="id" id="id" value="@Model.Id" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="eventId" class="form-label">EventId:</label>
            <input type="text" name="eventId" id="eventId" value="@Model.EvenId" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="name" class="form-label">Name:</label>
            <input type="text" name="name" id="name" value="@Model.Name" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="type" class="form-label">Type:</label>
            <input type="text" name="type" id="type" value="@Model.Type" class="form-control" />
        </div>
        <div class="col-md-2">
            <label for="mail" class="form-label">Mail:</label>
            <input type="text" name="mail" id="mail" value="@Model.Mail" class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </div>
</form>
