@page
@model Event.RazorWebApp.Pages.EventModel
@{
    ViewData["Title"] = "Event";
}

<h1>Event Management</h1>
<!-- Filter Form -->
<form asp-page="./Event" method="get" class="filter-form">
    <div class="form-group">
        <label for="EventName">Event Name</label>
        <input type="text" id="EventName" name="EventName" value="@Model.EventName" />
    </div>
    <div class="form-group">
        <label for="EventDate">Event Date</label>
        <input type="datetime-local" id="EventDate" name="EventDate" value="@Model.EventDate" />
    </div>
    <div class="form-group">
        <label for="EventDescription">Event Description</label>
        <input type="text" id="EventDescription" name="EventDescription" value="@Model.EventDescription" />
    </div>
    <div class="form-group">
        <label for="NumberTickets">Number of Tickets</label>
        <input type="number" id="NumberTickets" name="NumberTickets" value="@Model.NumberTickets" />
    </div>
    <div class="form-group">
        <label for="Sponsor">Sponsor</label>
        <input type="text" id="Sponsor" name="Sponsor" value="@Model.Sponsor" />
    </div>
    <div class="form-group">
        <label for="SubjectCode">Subject Code</label>
        <input type="text" id="SubjectCode" name="SubjectCode" value="@Model.SubjectCode" />
    </div>
    <div class="form-group">
        <label for="Location">Location</label>
        <input type="text" id="Location" name="Location" value="@Model.Location" />
    </div>
    <div class="form-group">
        <label for="EventTypeId">Event Type</label>
        <select id="EventTypeId" name="EventTypeId" class="form-control">
            <option value="">All</option>
            @foreach (var ev in Model.EventTypes)
            {
                <option value="@ev.EventTypeId">@ev.EventTypeName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-filter">Filter</button>
    </div>
</form>
<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createEventModal">Add New</button>
</p>
<div class="modal fade" id="createEventModal" tabindex="-1" role="dialog" aria-labelledby="createEventModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createEventModalLabel">Create New Event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="CreateEvent">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.EventName" class="control-label">Event Name</label>
                                <input asp-for="Event.EventName" class="form-control" />
                                <span asp-validation-for="Event.EventName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.EventDate" class="control-label">Event Date</label>
                                <input asp-for="Event.EventDate" class="form-control" type="date" />
                                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.StartTime" class="control-label">Start Time</label>
                                <input asp-for="Event.StartTime" class="form-control" type="time" />
                                <span asp-validation-for="Event.StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.ActivedTime" class="control-label">Actived Time</label>
                                <input asp-for="Event.ActivedTime" class="form-control" type="number" />
                                <span asp-validation-for="Event.ActivedTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.EventTypeId" class="control-label">Event Type</label>
                                <select asp-for="Event.EventTypeId" asp-items="@(new SelectList(Model.EventTypes, "EventTypeId", "EventTypeName"))" class="form-control">
                                    <option value="">-- Select EventType --</option>
                                </select>
                                <span asp-validation-for="Event.EventTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.EventDescription" class="control-label">Description</label>
                                <textarea asp-for="Event.EventDescription" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Event.EventDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.NumberTickets" class="control-label">Number of Tickets</label>
                                <input asp-for="Event.NumberTickets" class="form-control" type="number" />
                                <span asp-validation-for="Event.NumberTickets" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.Sponsor" class="control-label">Sponsor</label>
                                <input asp-for="Event.Sponsor" class="form-control" />
                                <span asp-validation-for="Event.Sponsor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.SubjectCode" class="control-label">Subject Code</label>
                                <input asp-for="Event.SubjectCode" class="form-control" />
                                <span asp-validation-for="Event.SubjectCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.Location" class="control-label">Location</label>
                                <input asp-for="Event.Location" class="form-control" />
                                <span asp-validation-for="Event.Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Event.CreatedBy" class="control-label">CreatedBy</label>
                                <input asp-for="Event.CreatedBy" class="form-control" />
                                <span asp-validation-for="Event.CreatedBy" class="text-danger"></span>
                            </div>
                        </div>
                        
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<h2>Events List</h2>

<table class="table">
    <thead>
        <tr>
            <th>EventId</th>
            <th>EventName</th>
            <th>EventDate</th>
            <th>StartTime</th>
            <th>ActivedTime</th>
            <th>EventType</th>
            <th>EventDescription</th>
            <th>NumberTickets</th>
            <th>Sponsor</th>
            <th>SubjectCode</th>
            <th>Location</th>
            <th>CreatedDate</th>
            <th>CreatedBy</th>
            <th>UpdatedDate</th>
            <th>UpdatedBy</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.EventName</td>
                <td>@item.EventDate</td>
                <td>@item.StartTime</td>
                <td>@item.ActivedTime</td>
                <td>@item.EventType.EventTypeName</td>
                <td>@item.EventDescription</td>
                <td>@item.NumberTickets</td>
                <td>@item.Sponsor</td>
                <td>@item.SubjectCode</td>
                <td>@item.Location</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@item.CreatedBy</td>
                <td>@item.UpdatedDate.ToString("dd/MM/yyyy")</td>
                <td>@item.UpdatedBy</td>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#editEventModal_@item.EventId">Edit</button>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal-@item.EventId">Delete</button>
                </td>
            </tr>
            <div class="modal fade" id="editEventModal_@item.EventId" tabindex="-1" role="dialog" aria-labelledby="editEventModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editEventModalLabel">Edit Event</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form method="post" asp-page-handler="EditEvent" asp-route-id="@item.EventId">
                                <input type="hidden" asp-for="Event.EventId" value="@item.EventId" />
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.EventName" class="control-label">Event Name</label>
                                            <input asp-for="Event.EventName" class="form-control" value="@item.EventName"/>
                                            <span asp-validation-for="Event.EventName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.EventDate" class="control-label">Event Date</label>
                                            <input asp-for="Event.EventDate" class="form-control" type="datetime" value="@item.EventDate"/>
                                            <span asp-validation-for="Event.EventDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.StartTime" class="control-label">Start Time</label>
                                            <input asp-for="Event.StartTime" class="form-control" type="time" value ="@item.StartTime" />
                                            <span asp-validation-for="Event.StartTime" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.ActivedTime" class="control-label">Actived Time</label>
                                            <input asp-for="Event.ActivedTime" class="form-control" type="number" value="@item.ActivedTime"/>
                                            <span asp-validation-for="Event.ActivedTime" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.EventTypeId" class="control-label">Event Type</label>
                                            <select asp-for="Event.EventTypeId" asp-items="@(new SelectList(Model.EventTypes, "EventTypeId", "EventTypeName"))" class="form-control" default ="@item.EventTypeId">
                                               @*  <option value="">--Select Any Type--</option> *@
                                            </select>
                                            <span asp-validation-for="Event.EventTypeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.EventDescription" class="control-label">Description</label>
                                            <textarea asp-for="Event.EventDescription" class="form-control" rows="3" default="@item.EventDescription"></textarea>
                                            <span asp-validation-for="Event.EventDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.NumberTickets" class="control-label">Number of Tickets</label>
                                            <input asp-for="Event.NumberTickets" class="form-control" type="number" value ="@item.NumberTickets"/>
                                            <span asp-validation-for="Event.NumberTickets" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.Sponsor" class="control-label">Sponsor</label>
                                            <input asp-for="Event.Sponsor" class="form-control" value="@item.Sponsor"/>
                                            <span asp-validation-for="Event.Sponsor" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.SubjectCode" class="control-label">Subject Code</label>
                                            <input asp-for="Event.SubjectCode" class="form-control" value="@item.SubjectCode"/>
                                            <span asp-validation-for="Event.SubjectCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.Location" class="control-label">Location</label>
                                            <input asp-for="Event.Location" class="form-control" value ="@item.Location"/>
                                            <span asp-validation-for="Event.Location" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Event.UpdatedBy" class="control-label">UpdatedBy</label>
                                            <input asp-for="Event.UpdatedBy" class="form-control" value="@item.UpdatedBy" />
                                            <span asp-validation-for="Event.UpdatedBy" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <input asp-for="Event.CreatedBy" class="form-control" type="hidden" value="@item.CreatedBy"/>
                                    <input asp-for="Event.CreatedDate" class="form-control" type="hidden" value="@item.CreatedDate.Date" />
                                </div>


                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="deleteModal-@item.EventId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@item.EventId" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel-@item.EventId">Delete Event</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this event?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form method="post" asp-page-handler="Delete"  asp-route-id="@item.EventId">
                                <input asp-for="Event.EventId" value="@item.EventId" type="hidden" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<div class="pagination">
    @{
        var previousDisabled = Model.PageIndex <= 1 ? "disabled" : "";
        var nextDisabled = Model.Events.Count < Model.PageSize ? "disabled" : "";
    }
    <a asp-page="./Event" asp-route-pageIndex="@(Model.PageIndex - 1)" class="btn btn-primary @previousDisabled">Previous</a>
    <a asp-page="./Event" asp-route-pageIndex="@(Model.PageIndex + 1)" class="btn btn-primary @nextDisabled">Next</a>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-page="./Event" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm" asp-route-eventTypeId="@Model.EventTypeId">@i</a>
            </li>
        }
    </ul>
</nav>

